<h1>Listing documents</h1>

<table>
  <tr>
    <th>Content filename</th>
    <th>Content type</th>
    <th>Content file size</th>
    <th>Caption</th>
    <th>Description</th>
    <th>Created at</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%= document.content_filename %></td>
    <td><%= document.content_type %></td>
    <td><%= document.content_file_size %></td>
    <td><%= document.caption %></td>
    <td><%= document.description %></td>
    <td><%= document.created_at %></td>
    <td><%= document.user_id %></td>
    <td><%= link_to 'Show', document %></td>
    <td><%= link_to 'Edit', edit_document_path(document) %></td>
    <td><%= link_to 'Destroy', document, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

